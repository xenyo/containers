{
  "name": "ubuntu",
  "private": "true",
  "scripts": {
    "watch": "nodemon --watch Dockerfile --exec \"pnpm build && pnpm clean\"",
    "build": "docker compose build --progress=plain",
    "clean": "docker compose down",
    "start": "docker compose up -d && docker compose exec ubuntu bash"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
